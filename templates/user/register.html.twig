{% extends 'base.html.twig' %}


{% block title %}Enregistrement{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Bravo !</strong>
            <span class="block sm:inline">{{ message }}</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
  </span>
        </div>
    {% endfor %}
    <div class="flex flex-col h-screen bg-gray-100">
        <div class="grid place-items-center mx-2 my-20 sm:my-auto">
            <div class="w-11/12 p-12 sm:w-8/12 md:w-6/12 lg:w-5/12 2xl:w-4/12
            px-6 py-10 sm:px-10 sm:py-6
            bg-white rounded-lg shadow-md lg:shadow-lg">
                <h2 class="text-center font-semibold text-3xl lg:text-4xl text-gray-800">
                    Enregistrement
                </h2>
                {{form_start(form) }}
                <div class="block text-xs font-semibold text-gray-600 uppercase"></div>

                {{ form_label(form.name , 'Nom :', {
                    'label_attr': {'class': 'block text-xs font-semibold text-gray-600 uppercase'}
                }) }}
                {{ form_widget(form.name ,{'attr': {'placeholder': 'Entrer votre nom'}}) }}
                {{ form_label(form.email.first) }}
                {{ form_widget(form.email.first ,{'attr': {'placeholder': 'Entrer votre email'}}) }}
               <p class="error-message">{{ form_errors(form.email.first) }}</p>
                {{ form_label(form.email.second) }}
                {{ form_widget(form.email.second ,{'attr': {'placeholder': 'Confirmer votre email'}}) }}
                {{ form_errors(form.email.second , {'label_attr': {'class': 'text-red-500'}}) }}
                {{ form_label(form.password.first) }}
                {{ form_widget(form.password.first ,{'attr': {'placeholder': 'Entrer votre mot de passe'}}) }}
                {{ form_errors(form.password.first , {'label_attr': {'class': 'text-red-500'}}) }}
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second ,{'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
                {{ form_errors(form.password.second , {'label_attr': {'class': 'text-red-500'}}) }}
                {{ form_widget(form.save, { 'label': 'Enregistrement' }) }}

                    <div class="sm:flex sm:flex-wrap mt-8 sm:mb-4 text-sm text-center">
                        <a href="{{ path('post_login') }}" class="flex-2 underline">
                            Se connecter
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}